{
  "extends": "@antfu",
  "plugins": [
    "react",
    "@typescript-eslint"
  ],
  "rules": {
    "curly": "off", //必须使用 if(){} 中的{}
    "@typescript-eslint/brace-style": "off",
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
      "react/self-closing-comp": [
        "error"
      ],
    "indent": ["error",2],//缩进风格
    
    // "curly":"off", //关闭一行代码中的大括号
  }
}